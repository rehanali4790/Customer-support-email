# OpenAI API Key (Required)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Email Provider Configuration
EMAIL_PROVIDER=smtp  # Options: smtp, gmail, sendgrid

# SMTP Configuration (if using SMTP)
SMTP_HOST=smtp.hostinger.com 
SMTP_PORT=587
SMTP_USERNAME=support@yourdomain.com
SMTP_PASSWORD=your_smtp_password
SMTP_USE_TLS=true

# IMAP Configuration (for receiving emails)
IMAP_HOST=imap.hostinger.com
IMAP_PORT=993

# Gmail Configuration (if using Gmail)
GMAIL_ADDRESS=your_email@gmail.com
GMAIL_APP_PASSWORD=your_app_password

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=your_email@example.com

# Vector DB Configuration
VECTOR_DB_TYPE=chroma  # Options: chroma, faiss
VECTOR_DB_PATH=./data/vectordb

# Conversation History DB
CONVERSATION_DB_PATH=./data/conversations

# Knowledge Base Documents Path
KNOWLEDGE_BASE_PATH=./knowledge_base

# Human-in-the-Loop Configuration
HUMAN_REVIEW_REQUIRED_URGENCY=high  # Options: low, medium, high
HUMAN_REVIEW_COMPLEXITY_THRESHOLD=0.7  # 0-1 scale
ADMIN_EMAIL=admin@yourdomain.com  # Email for escalation notifications

# Application Settings
LOG_LEVEL=INFO

# API Configuration
API_PORT=5000
FLASK_ENV=production  # or development
API_KEY=your_api_key_here  # Optional: for API authentication
